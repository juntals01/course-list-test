        "importantColor": "#B45309",
        "importantFontWeight": 600
      },
      "fields": [
        { "label": "Select Category", "type": "dropdown", "placeholder": "Select Category" }
      ],
      "buttons": [
        { "label": "Cancel", "variant": "outline" },
        { "label": "Confirm Transfer", "variant": "primary" }
      ]
    },
