      "buttons": [
        { "label": "Cancel", "variant": "outline" },
        { "label": "Delete", "variant": "primary" }
      ]
    },
    "restoreCategory": {
      "title": "Restore Category",
      "icon": { "component": "Info", "color": "#6DA017" },
      "message": "Restore selected category?",
      "description": "Are you sure you want to restore the selected category? All articles under it will also be restore.",
      "buttons": [
        { "label": "Cancel", "variant": "outline" },
        { "label": "Restore", "variant": "primary" }
      ]
    },
    "restoreArticle": {
      "title": "Restore Article",
      "message": "The current category for {articleName} article is currently inactive or archived. To continue, please choose an active category to transfer this article.",
      "fields": [
        { "label": "Select Category", "type": "dropdown", "placeholder": "Select Category" }
      ],
      "buttons": [
        { "label": "Cancel", "variant": "outline" },
        { "label": "Transfer and Restore", "variant": "primary" }
      ]
    },
    "revertArticleConfirm": {
      "title": "Revert Article",
